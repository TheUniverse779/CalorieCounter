<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <RelativeLayout
        tools:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.ornach.richtext.RichView
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            app:rt_backgroundColor="#1AFFFFFF"
            app:rt_radius="16dp">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/svn_avo_bold"
                android:gravity="center"
                android:text="Are you sure you want to watch"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:fontFamily="@font/svn_avo_bold"
                    android:text="video ad to get "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginBottom="-2dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_coin"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:fontFamily="@font/svn_avo_bold"
                    android:text="1?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="34dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ornach.richtext.RichText
                    android:id="@+id/btnWatchAd"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:paddingVertical="14dp"
                    android:fontFamily="@font/svn_avo_bold"
                    android:textSize="16dp"
                    android:text="Watch ad"
                    android:textColor="#333333"
                    app:rt_backgroundColor="@color/color_brand"
                    android:layout_weight="1"
                    app:rt_radius="100dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


                <com.ornach.richtext.RichText
                    android:id="@+id/btnCancel"
                    app:rt_radius="100dp"
                    android:gravity="center"
                    android:paddingVertical="14dp"
                    android:fontFamily="@font/svn_avo"
                    android:textSize="16dp"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    app:rt_backgroundColor="#000000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </com.ornach.richtext.RichView>


    </RelativeLayout>
</layout>