<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.caloriecounter.calorie.ui.NonSwappableViewPager
            android:id="@+id/vpMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <com.ornach.richtext.RichView
            android:layout_alignParentBottom="true"
            android:id="@+id/btnNext"
            android:layout_marginBottom="64dp"
            android:layout_marginTop="32dp"
            app:rt_radius="100dp"
            app:rt_backgroundColor="@color/color_brand"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/svn_avo_bold"
                    android:paddingVertical="18dp"
                    android:text="CONTINUE"
                    android:textColor="#333333"
                    android:textSize="16dp" />


                <com.airbnb.lottie.LottieAnimationView
                    android:layout_marginEnd="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:lottie_loop="true"
                    android:layout_gravity="center"
                    android:id="@+id/view"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/next_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>




            </RelativeLayout>


        </com.ornach.richtext.RichView>


        <TextView
            android:layout_marginTop="26dp"
            android:id="@+id/btnSkip"
            android:padding="16dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/svn_avo"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="12dp"
            android:paddingStart="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/cancel_2" />



    </RelativeLayout>
</layout>